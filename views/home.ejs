<div id="inline-div">
  <div id="talk">
    <div id="ct">
      <h2>Crypto Talk</h2>
    </div>
    <div id="ct-feed">
      <% if(user){ %>
      <div>
      <form action="/" method="POST">
        <label for="Post">Post</lablel>
          <textarea id="post" name="p"></textarea>  
          <input type="submit" />
      </form>
    </div>
    <% } %>
    <div>
      <ul>
        <% posts.forEach(post => { %>

          
          <li>  <%= post.user.userName %>: <%= post.content %>
            <% if (post.user.id === userId) { %>
            <form method="POST" action="/<%= post.id %>/?_method=PUT">
              <input type="text" name="content"/>
              <button type="submit">Edit</button>
          </form>
          <form method="POST" action="/<%= post.id %>/?_method=DELETE">
            <button type="submit">Delete</button>
         </form>
        <% } %>
            </li>
  
          <% }) %>
      </ul>
    </div>
    </div>
  </div>

  <div id="cryptos">
    <div>
      <ul>
        <% tickers.forEach(ticker => { %>

        <li><%= ticker.symbol %></li>

        <% }) %>
      </ul>
    </div>
  </div>
  <div>
    <div id="prices">
      <ul>
        <% tickers.forEach(ticker => { %>

        <li><%= ticker.price %></li>

        <% }) %>
      </ul>
    </div>
  </div>
</div>
